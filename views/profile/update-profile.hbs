<link rel="stylesheet" href="/stylesheets/signup-login-style.css" />
<div class="container">
  <h1>Edit Profile</h1>

  <div class="error-message">
    {{#if errorMessage}}
      <p style="color: red">{{errorMessage}}</p>
    {{/if}}
  </div>
  <form action="/profile/update-profile" method="POST">
    <div class="row">
      <div class="col-25">
        <label for="fname">Username</label>
      </div>
      <div class="col-75">
        <input
          type="text"
          id="fname"
          name="username"
          value="{{user.username}}"
          required
        />
      </div>
    </div>
    <div class="row">
      <div class="col-25">
        <label for="lname">Email</label>
      </div>
      <div class="col-75">
        <input
          type="email"
          id="lname"
          name="email"
          value="{{user.email}}"
          required
        />
      </div>
    </div>
    <div class="row">
      <div class="col-25">
        <label>Bio</label>
      </div>
      <div class="col-75">
        <textarea
          id="subject"
          name="bio"
          style="height:100px"
          placeholder="Tell us about yaself guv'nor"
          maxlength="100"
        >{{user.bio}}</textarea>
      </div>
    </div>
    <div class="row">
      <div class="col-25">
        <label for="country">Headset</label>
      </div>
      <div class="col-75">
        <select id="country" name="headset">
          <option value="" disabled selected>Select your headset </option>
          <option value="Rift">Rift</option>
          <option value="Index">Index</option>
          <option value="Quest">Quest</option>
          <option value="Quest2">Quest2</option>
          <option value="Other">I don't have one...ðŸ˜ž </option>
        </select>
      </div>
    </div>
    <div class="row">
      <a href="/profile/my-profile">go back</a>
      <input type="submit" value="Update" />
    </div>
  </form>
</div>