<link rel="stylesheet" href="/stylesheets/signup-login-style.css" />
<div class="container">
  <h1>Edit Post</h1>

  <div class="error-message">
    {{#if errorMessage}}
      <p style="color: red">{{errorMessage}}</p>
    {{/if}}
  </div>
  <form action="/posts/{{post._id}}/edit" method="POST">
    <div class="row">
      <div class="col-75">
        <input type="text" name="title" required value="{{post.title}}" />
      </div>
    </div>
    <div class="row">
      <div class="col-75">
        <textarea
          name="post"
          style="height:100px"
          maxlength="100"
        >{{post.post}}</textarea>
      </div>
    </div>

    <div class="row">
      <a href="/profile/my-profile">go back</a>
      <input type="submit" value="Submit Post!" />
    </div>
  </form>
</div>